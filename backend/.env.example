# Environment Variables
NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/banking-system

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRE=30d

# RabbitMQ
RABBITMQ_URL=amqp://localhost
RABBITMQ_QUEUE_TRANSACTIONS=transactions
RABBITMQ_QUEUE_NOTIFICATIONS=notifications
RABBITMQ_QUEUE_AUDIT=audit-logs

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_TRANSACTIONS=banking-transactions
ELASTICSEARCH_INDEX_USERS=banking-users

# Redis
REDIS_URL=redis://localhost:6379
REDIS_SESSION_EXPIRE=3600

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email (Optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Banking Specific
DAILY_TRANSFER_LIMIT=100000
MINIMUM_BALANCE=1000
TRANSACTION_FEE=2.50
CURRENCY=USD